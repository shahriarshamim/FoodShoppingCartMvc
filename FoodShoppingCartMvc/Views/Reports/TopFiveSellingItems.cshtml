@model TopNSoldItemsVm

<h3>Top selling items</h3>
@if (Model != null)
{
    <div>
        <form class="my-2 d-flex" style="gap:5px" asp-action="TopFiveSellingItems" method="get">
            <input type="date" style="width: 200px;" class="form-control" name="sDate" />
            <input type="date" style="width: 200px;" class="form-control" name="eDate" />
            <button class="btn btn-primary">Filter</button>
            <a class="btn btn-primary" href="/Reports/TopFiveSellingItems">Clear</a>
        </form>

        <h4>Showing Results from @Model.StartDate.ToString("dd-MMM-yyyy") to @Model.EndDate.ToString("dd-MMM-yyyy")</h4>

        @if (Model.TopNSoldItems.Count() == 0)
        {
            <div class="my-3" style="font-size:16px; font-weight:bold">
                No records found
            </div>
        }
        else
        {
            <table style="width: 50%;" class="table table-striped">
                <thead>
                <th>Item</th>
                <th>Sold Units</th>
                </thead>

                <tbody>
                    @foreach (var item in Model.TopNSoldItems)
                    {
                        <tr>
                            <td>@item.ItemName by @item.Weight</td>
                            <td>@item.TotalUnitSold</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}
else
{
    <h4>Something went wrong</h4>
}
