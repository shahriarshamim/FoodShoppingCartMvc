@model ItemDTO
@{
    Layout = "_AdminLayout";
}
<div style="width:50%">
    <h2> Add Products </h2>
    <a asp-action="Index" asp-controller="Item" class="btn btn-primary">Back</a>
    <form asp-action="AddItem" enctype="multipart/form-data">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Item*</label>
            <input type="text" class="form-control" asp-for="ItemName" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Weight*</label>
            <input type="text" class="form-control" asp-for="Weight" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Category*</label>
            <select class="form-control" asp-for="CategoryId" asp-items="Model.CategoryList">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Price*</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
